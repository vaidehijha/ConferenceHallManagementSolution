@page "/masters/temployee"
@page "/masters/tememployee"
@rendermode InteractiveServer
@using ConferenceHallManagement.Web.ViewModels
@using ConferenceHallManagement.web.Services
@using ConferenceHallManagement.Web.Services
@inject ITempEmployeeRoleBlazorService Service
@inject IJSRuntime JS
@inject NavigationManager Navigation
@inject AuthState Auth

<PageTitle>Employee Role Assignments</PageTitle>

@if (!Auth.IsLoggedIn)
{
    <div class="container-fluid py-5">
        <div class="alert alert-warning text-center" role="alert">
            <i class="bi bi-exclamation-triangle-fill display-3 d-block mb-3"></i>
            <h4 class="alert-heading">Access Denied</h4>
            <p>You must be logged in to view Employee Role Assignments.</p>
            <hr>
            <p class="mb-0">
                <a href="/login" class="btn btn-primary">Go to Login</a>
            </p>
        </div>
    </div>
}
else
{
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>
                    <i class="bi bi-people-fill me-2"></i>
                    Employee Role Assignments 
                    <span class="badge bg-primary fs-6">@roles.Count</span>
                </h2>
                <p class="text-muted mb-0">Manage employee access roles and permissions</p>
            </div>
            <a class="btn btn-success btn-lg shadow" href="/masters/temployee/create">
                <i class="bi bi-plus-circle-fill me-2"></i> Add New Assignment
            </a>
        </div>

        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-3 fs-5">Loading role assignments...</p>
            </div>
        }
        else if (roles.Any())
        {
            <div class="card shadow-lg border-0">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th><i class="bi bi-hash me-1"></i>ID</th>
                                    <th><i class="bi bi-person-badge me-1"></i>Employee No.</th>
                                    <th><i class="bi bi-building me-1"></i>Location</th>
                                    <th><i class="bi bi-diagram-3 me-1"></i>Department</th>
                                    <th><i class="bi bi-shield-check me-1"></i>Role</th>
                                    <th><i class="bi bi-pencil me-1"></i>Write Access</th>
                                    <th><i class="bi bi-toggle-on me-1"></i>Status</th>
                                    <th class="text-center"><i class="bi bi-gear me-1"></i>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in roles)
                                {
                                    <tr>
                                        <td class="fw-bold">@role.Id</td>
                                        <td>
                                            <span class="badge bg-secondary">@role.EmployeeNo</span>
                                        </td>
                                        <td>
                                            @GetLocationName(role.LocationId)
                                        </td>
                                        <td>@role.DepartmentId</td>
                                        <td>
                                            <span class="badge @GetRoleBadgeClass(role.RoleId)">
                                                @GetRoleName(role.RoleId)
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge @(role.IsAllowWrite ? "bg-success" : "bg-secondary")">
                                                @(role.IsAllowWrite ? "✅ Yes" : "❌ No")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge @(role.IsActive ? "bg-success" : "bg-danger")">
                                                @(role.IsActive ? "🟢 Active" : "🔴 Inactive")
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="/masters/temployee/edit/@role.Id" 
                                                   class="btn btn-sm btn-outline-primary"
                                                   title="Edit">
                                                    <i class="bi bi-pencil-fill"></i>
                                                </a>
                                                <button class="btn btn-sm btn-outline-danger" 
                                                        @onclick="() => DeleteRole(role.Id)"
                                                        title="Delete">
                                                    <i class="bi bi-trash-fill"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <h4 class="mt-3">No Role Assignments Found</h4>
                <p class="text-muted">Create your first employee role assignment to get started.</p>
                <a class="btn btn-primary btn-lg" href="/masters/temployee/create">
                    <i class="bi bi-plus-circle me-2"></i>Add First Assignment
                </a>
            </div>
        }
    </div>
}

@code {
    private List<TempEmployeeRoleVM> roles = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await Auth.InitializeAsync();
        if (Auth.IsLoggedIn)
        {
            await LoadRoles();
        }
    }

    private async Task LoadRoles()
    {
        try
        {
            isLoading = true;
            var result = await Service.GetAllAsync();
            roles = result.ToList();
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error loading roles: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task DeleteRole(int id)
    {
        var confirm = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this role assignment?");
        if (confirm)
        {
            try
            {
                var result = await Service.DeleteAsync(id);
                if (result > 0)
                {
                    await JS.InvokeVoidAsync("alert", "✅ Role assignment deleted successfully!");
                    await LoadRoles();
                }
                else
                {
                    await JS.InvokeVoidAsync("alert", "❌ Failed to delete role assignment!");
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"Error: {ex.Message}");
            }
        }
    }

    private string GetLocationName(int? locationId)
    {
        return locationId switch
        {
            1 => "Corporate Office",
            2 => "Manesar",
            _ => "Unknown"
        };
    }

    private string GetRoleName(int? roleId)
    {
        return roleId switch
        {
            1 => "Super Admin",
            2 => "Central Admin",
            3 => "Regional Admin",
            4 => "Station Admin",
            _ => "Unknown"
        };
    }

    private string GetRoleBadgeClass(int? roleId)
    {
        return roleId switch
        {
            1 => "bg-danger",
            2 => "bg-warning text-dark",
            3 => "bg-info",
            4 => "bg-primary",
            _ => "bg-secondary"
        };
    }
}
